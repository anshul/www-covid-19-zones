{
  "name": "www-covid-19-zones",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@material-ui/styles": "4.9.10",
    "@testing-library/react": "^9.3.2",
    "@testing-library/user-event": "^7.1.2",
    "@types/axios": "^0.14.0",
    "@types/node": "^12.0.0",
    "@types/node-sass": "^4.11.0",
    "@types/react": "^16.9.0",
    "@types/react-autocomplete": "^1.8.5",
    "@types/react-dom": "^16.9.0",
    "@types/react-relay": "^7.0.3",
    "@types/react-router-dom": "^5.1.4",
    "@types/relay-runtime": "^8.0.6",
    "axios": "^0.19.2",
    "chart.js": "^2.9.3",
    "clsx": "^1.1.0",
    "node-sass": "^4.13.1",
    "react": "^16.13.1",
    "react-autocomplete": "^1.8.1",
    "react-chartjs-2": "^2.9.0",
    "react-dom": "^16.13.1",
    "react-flexbox-grid": "^2.1.2",
    "react-icons": "^3.9.0",
    "react-relay": "^9.0.0",
    "react-router-dom": "^5.1.2",
    "react-scripts": "3.4.1",
    "relay-runtime": "^9.0.0",
    "typescript": "~3.7.2"
  },
  "devDependencies": {
    "@typescript-eslint/eslint-plugin": "^2.27.0",
    "@typescript-eslint/parser": "^2.27.0",
    "babel-plugin-relay": "^9.0.0",
    "eslint": "^6.6.0",
    "eslint-config-prettier": "^6.10.1",
    "eslint-config-react-app": "^5.2.1",
    "eslint-loader": "3.0.3",
    "eslint-plugin-flowtype": "4.6.0",
    "eslint-plugin-import": "2.20.1",
    "eslint-plugin-jsx-a11y": "6.2.3",
    "eslint-plugin-prettier": "^3.1.2",
    "eslint-plugin-react": "7.19.0",
    "eslint-plugin-react-hooks": "^1.6.1",
    "get-graphql-schema": "^2.1.2",
    "graphql-compiler": "^1.7.0",
    "husky": "^4.2.5",
    "prettier": "^2.0.4",
    "relay-compiler": "8.0.0",
    "relay-compiler-language-typescript": "^10.1.5",
    "relay-config": "^9.0.0"
  },
  "scripts": {
    "start": "REACT_APP_API_URL=http://localhost:6400 PORT=7200 react-scripts start",
    "build": "REACT_APP_API_URL=https://covid-19-zones.com react-scripts build",
    "test": "react-scripts test",
    "eject": "react-scripts eject",
    "fix": "eslint 'src/**/*.{js,ts,tsx}' --fix",
    "lint": "eslint --ignore-pattern 'src/**/*.{js,ts,tsx}'",
    "lint:ci": "yarn run eslint --ext .tsx,.ts,.js,.jsx --ignore-pattern src",
    "update-schema": "yarn --silent get-graphql-schema http://localhost:6400/graphql > schema.graphql",
    "relay": "yarn run relay-compiler --language typescript --artifactDirectory ./src/__generated__ --schema ./schema.graphql --src ./src/ $@",
    "relay-watch": "yarn run relay-compiler --language typescript --artifactDirectory ./src/__generated__ --schema ./schema.graphql --src ./src/ --watch $@"
  },
  "eslintConfig": {
    "extends": [
      "react-app",
      "plugin:react/recommended",
      "plugin:@typescript-eslint/recommended",
      "prettier/@typescript-eslint",
      "plugin:prettier/recommended",
      "prettier/@typescript-eslint",
      "prettier/react"
    ],
    "plugins": [
      "react",
      "@typescript-eslint",
      "prettier"
    ],
    "env": {
      "browser": true,
      "jasmine": true,
      "node": true,
      "es6": true
    },
    "rules": {
      "prettier/prettier": [
        "error",
        {
          "semi": false,
          "singleQuote": true,
          "jsxSingleQuote": true,
          "printWidth": 144
        }
      ],
      "@typescript-eslint/triple-slash-reference": [
        "error",
        {
          "path": "always",
          "types": "always",
          "lib": "always"
        }
      ],
      "@typescript-eslint/camelcase": "off",
      "@typescript-eslint/explicit-function-return-type": "off",
      "@typescript-eslint/no-use-before-define": "off",
      "no-console": "off",
      "react/prop-types": "off"
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "yarn lint"
    }
  },
  "babelMacros": {
    "relay": {
      "artifactDirectory": "./src/__generated__"
    }
  }
}